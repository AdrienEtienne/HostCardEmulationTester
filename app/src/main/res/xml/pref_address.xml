<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="service_address"
        android:title="@string/pref_title_address"
        android:defaultValue="@string/pref_default_address"
        android:summary="@string/pref_description_address"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:digits="0123456789."
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="service_port"
        android:title="@string/pref_title_port"
        android:defaultValue="@string/pref_default_port"
        android:summary="@string/pref_description_port"
        android:selectAllOnFocus="true"
        android:numeric="integer"
        android:inputType="number"
        android:digits="0123456789"
        android:maxLength="5"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
